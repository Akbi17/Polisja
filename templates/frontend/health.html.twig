{% extends 'base.html.twig' %}

{% block body %}

<link rel="stylesheet" href="frontendStyle/HTML/css/healthForm.css">
<div class="container" style="padding-top:10rem">
	<div class="row ">
            <div class="col-md-12">
                <h2 class="short word-rotator-title"><strong>Polisja</strong> to <strong class="inverted" data-appear-animation="bounceIn">
                    <span class="word-rotate" data-plugin-options='{"delay": 2000}'>
                        <span class="word-rotate-items">
                            <span>biezpieczne.</span>
                            <span>najlepsze.</span>
        					<span>wygodne.</span>
		    			</span>
					</span>
    				</strong>
				</h2>
                    <p> Ubezpieczenie na życie zapewnia ochronę Tobie i Twoim najbliższym w razie
                        nieprzewidzianych zdarzeń. Dzięki niemu zapewniamy Ci wsparcie finansowe
                        w trudnych chwilach.
                    </p>
			</div>
		</div>
  

    {{ form_start(form, {'attr': {'id': 'lifeInsuranceForm'}}) }}
    <div class="row">
        <div class="form-group col-md-6">
            <label for="{{ form.name.vars.id }}">{{ form.name.vars.label }}</label>
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
        </div>
        <div class="form-group col-md-6">
            <label for="{{ form.surname.vars.id }}">{{ form.surname.vars.label }}</label>
            {{ form_widget(form.surname, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label for="{{ form.mail.vars.id }}">{{ form.mail.vars.label }}</label>
            {{ form_widget(form.mail, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
        </div>
        <div class="form-group col-md-6">
            <label for="{{ form.phone.vars.id }}">{{ form.phone.vars.label }}</label>
            {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label for="{{ form.birthDate.vars.id }}">{{ form.birthDate.vars.label }}</label>
            {{ form_widget(form.birthDate, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
        </div>
        <div class="form-group col-md-6">
            <label for="{{ form.gender.vars.id }}">{{ form.gender.vars.label }}</label>
            {{ form_widget(form.gender, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label for="{{ form.occupation.vars.id }}">{{ form.occupation.vars.label }}</label>
            {{ form_widget(form.occupation, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
        </div>
        <div class="form-group col-md-6">
            <label for="{{ form.policyStartDate.vars.id }}">{{ form.policyStartDate.vars.label }}</label>
            {{ form_widget(form.policyStartDate, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary btn-lg">Wyślij</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% include 'banner.html.twig' %}
{% endblock %}
