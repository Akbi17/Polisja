<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="frontendStyle/HTML/css/styleDoInstall.css">
</head>
<body>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">

            {% for flashMessage in app.session.flashBag.get('success') %}
                <div class="alert alert-success" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashBag.get('error') %}
                <div class="alert alert-danger" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            <div class="form-container">
                <h2>WebPages</h2>
                {{ form_start(webPageConfigForm) }}
                <div class="form-group">
                    {{ form_label(webPageConfigForm.webPage, 'Web Page') }}
                    {{ form_widget(webPageConfigForm.webPage, {'attr': {'class': 'form-control', 'placeholder': 'Enter webpage name'}}) }}
                    {{ form_errors(webPageConfigForm.webPage, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(webPageConfigForm.status, 'Status') }}
                    {{ form_widget(webPageConfigForm.status, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(webPageConfigForm.status, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <button type="submit" class="form-submit-btn">Save</button>
                {{ form_end(webPageConfigForm) }}
            </div>

            <div class="form-container">
                <h2>User Registration</h2>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.username, 'Username') }}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Enter your username'}}) }}
                    {{ form_errors(form.username, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.agreeTerms, 'Agree to Terms') }}
                    {{ form_widget(form.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_errors(form.agreeTerms, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword, 'Password') }}
                    {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Enter your password'}}) }}
                    {{ form_errors(form.plainPassword, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.password, 'Confirm Password') }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Confirm your password'}}) }}
                    {{ form_errors(form.password, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.firstname, 'First Name') }}
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Enter your first name'}}) }}
                    {{ form_errors(form.firstname, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.lastname, 'Last Name') }}
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Enter your last name'}}) }}
                    {{ form_errors(form.lastname, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.email, 'Email') }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
                    {{ form_errors(form.email, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <button type="submit" class="form-submit-btn">Register</button>
                {{ form_end(form) }}
            </div>

        </div>
    </div>
</div>

</body>
</html>
