<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="frontendStyle/HTML/css/Install.css">
</head>
<body>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">

            {% for flashMessage in app.session.flashBag.get('success') %}
                <div class="alert alert-success" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashBag.get('error') %}
                <div class="alert alert-danger" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            <div class="form-container">
                <h2>Rejestarcja Admina</h2>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.username, 'Nazwa') }}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'NazwaAdmina'}}) }}
                    {{ form_errors(form.username, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.agreeTerms, 'Zgadzam się z warunkami') }}
                    {{ form_widget(form.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_errors(form.agreeTerms, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword, 'Hasło') }}
                    {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Wprowadź hasło'}}) }}
                    {{ form_errors(form.plainPassword, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.password, 'Powtórz Hasło') }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Powtórz hasło'}}) }}
                    {{ form_errors(form.password, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.firstname, 'Imię') }}
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Wpisz swoje imię'}}) }}
                    {{ form_errors(form.firstname, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.lastname, 'Nazwisko') }}
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Wpisz swoje nazwisko'}}) }}
                    {{ form_errors(form.lastname, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.email, 'E-mail') }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Wpisz swó e-mail'}}) }}
                    {{ form_errors(form.email, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <button type="submit" class="form-submit-btn">Rejestruj</button>
                {{ form_end(form) }}
            </div>

        </div>
    </div>
</div>

</body>
</html>
