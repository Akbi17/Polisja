{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}{{ block('page_title') }}{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1 class="text-center">WebPages</h1>
                {{ form_start(form, {'attr': {'class': 'my-form-class'}}) }}
                <div class="form-group">
                    {{ form_label(form.webPage, 'Web Page', {'label_attr': {'class': 'my-label-class'}}) }}
                    {{ form_widget(form.webPage, {'attr': {'class': 'form-control', 'placeholder': 'Wpisz nazwÄ™ strony'}}) }}
                    {{ form_errors(form.webPage, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.status, 'Status', {'label_attr': {'class': 'my-label-class'}}) }}
                    {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.status, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <button type="submit" class="btn btn-primary btn-block">Zapisz</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
