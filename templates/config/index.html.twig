{% extends '@EasyAdmin/page/content.html.twig' %}
{% block body_class 'page-content' %}
{% block page_title %}
{% endblock %}
{% block page_content %}
{% endblock %}
{% block content_title %}{{ block('page_title') }}{% endblock %}
{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1 class="text-center">Pages</h1>
                {{ form_start(form, {'attr': {'class': 'my-form-class'}}) }}
                <div class="form-group">
                    {{ form_label(form.name, 'Page', {'label_attr': {'class': 'my-label-class'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Wpisz nazwę strony'}}) }}
                    {{ form_errors(form.name, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.value, 'Status', {'label_attr': {'class': 'my-label-class'}}) }}
                    {{ form_widget(form.value, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.value, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <button type="submit" class="btn btn-primary btn-block">Zapisz</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1 class="text-center">Dane Kontaktowe</h1>
                {{ form_start(formConfigData, {'attr': {'class': 'my-form-class'}}) }}
                <div class="form-group">
                    {{ form_label(formConfigData.name, "", {'label_attr': {'class': 'my-label-class'}}) }}
                    {{ form_widget(formConfigData.name, {'attr': {'class': 'form-control', 'placeholder': 'Wpisz nazwę strony'}}) }}
                    {{ form_errors(formConfigData.name, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(formConfigData.value, "",{'label_attr': {'class': 'my-label-class'}}) }}
                    {{ form_widget(formConfigData.value, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(formConfigData.value, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <button type="submit" class="btn btn-primary btn-block">Zapisz</button>
                {{ form_end(formConfigData) }}
            </div>
        </div>
    </div>
{% endblock %}
